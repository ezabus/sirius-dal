<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="testingSetup">
        <class>org.zabus.sirius.model.SiriusServiceMethod</class>
        <class>org.zabus.sirius.model.SiriusService</class>
        <class>org.zabus.sirius.model.SiriusServer</class>
        <class>org.zabus.sirius.model.SiriusCluster</class>


        <properties>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.archive.autodetection" value="" />
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2dll.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>